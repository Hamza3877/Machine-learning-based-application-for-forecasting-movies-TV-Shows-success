        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.MachineLearningBasedApplicationForForecastingMoviesTVSeriesSuccess.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Theme.MachineLearningBasedApplicationForForecastingMoviesTVSeriesSuccess.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MachineLearningBasedApplicationForForecastingMoviesTVSeriesSuccess.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MachineLearningBasedApplicationForForecastingMoviesTVSeriesSuccess.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />




    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

